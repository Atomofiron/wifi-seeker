<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.raslav.wirelessscan.MainActivity">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <include
            android:id="@+id/layout_description"
            layout="@layout/layout_description"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <include
            android:id="@+id/layout_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_description"
            layout="@layout/layout_item"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/counter"
            android:layout_below="@+id/layout_description"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="0/0"
            android:paddingEnd="4dp"
            android:textColor="@color/color_label"
            />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_view"
            android:overScrollMode="never"
            android:divider="@null"
            android:layout_below="@+id/layout_item"
            android:clipToPadding="false"
            />
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:indeterminate="true"
            android:layout_marginBottom="-1.5dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            tools:visibility="visible"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/flash"
            android:background="@color/colorFlash"
            android:visibility="gone"
            />
    </RelativeLayout>
    <include
        android:id="@+id/filters"
        layout="@layout/scrollview_filters"
        />
    <include
        android:id="@+id/buttons"
        layout="@layout/layout_buttons_pane"
        />
</LinearLayout>
